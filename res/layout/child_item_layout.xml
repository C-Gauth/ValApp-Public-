    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/val_teal"
    android:id="@+id/childItemFull"
    android:clickable="true">

    <!-- Horizontal LinearLayout for existing content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"> <!-- Center items vertically -->

        <!--

        <TextView
            android:id="@+id/childTitle"
            android:text="Name of the lineup"
            android:layout_marginLeft="40dp"
            android:layout_width="0dp"
            android:height="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/groupButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/star_empty"
            android:background="@color/val_teal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
-->
    </LinearLayout>

    <!-- Additional TextView under existing content -->
    <TextView
        android:id="@+id/description"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Information about the lineup"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- three image container for the pics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- First Image -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/map" />

        <!-- Second Image -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/aim" />

        <!-- Third Image -->
        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/goal" />
    </LinearLayout>

</LinearLayout>
